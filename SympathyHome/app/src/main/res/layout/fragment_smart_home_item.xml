<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="100dp">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/btn_smartthings_gray"
            android:layout_gravity="center"
            android:backgroundTintMode="src_in"
            android:background="#EDEDED"
            android:id="@+id/fragment_smart_home_item_imagebutton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:showDividers="middle|end">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="ON"
                android:textColor="#B3B3B3"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textSize="40dp"
                android:gravity="center"
                android:id="@+id/fragment_smart_home_item_textview"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="450dp"
            android:cropToPadding="false"
            android:src="@drawable/btn_smartthing1"
            android:id="@+id/fragment_smart_home_item_imageview"
            android:layout_marginLeft="155dp" />
    </LinearLayout>

</RelativeLayout>