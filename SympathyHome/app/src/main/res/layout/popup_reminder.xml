<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_reminder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_material_light"
    android:orientation="vertical"
    android:outlineProvider="background"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_grey_800"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:text="알람 등록하기"
            android:textSize="20dp" />

        <Button
            android:id="@+id/popup_reminder_btn_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_cancle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=" 날짜"
            android:textColor="@color/material_blue_grey_950"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/popup_reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:editable="false"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/popup_reminder_btn_date"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_weight="0.11"
            android:background="@drawable/btn_datepicker"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=" 등록내용"
            android:textColor="@color/material_blue_grey_950"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/popup_reminder_contents"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/popup_reminder_btn_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록하기" />
    </LinearLayout>


</LinearLayout>
